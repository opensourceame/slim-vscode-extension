{
  "scopeName": "text.slim",
  "patterns": [
    {
      "include": "#comments"
    },
    {
      "include": "#major"
    },
    {
      "include": "#layout"
    },
    {
      "include": "#elements"
    },
    {
      "include": "#ruby-code"
    },
    {
      "include": "#text-content"
    }
  ],
  "repository": {
    "comments": {
      "patterns": [
        {
          "name": "comment.line.slim",
          "match": "^\\s*(\\/\\/).*$"
        },
        {
          "name": "comment.block.slim",
          "begin": "^\\s*(\\/\\/)",
          "end": "^\\s*(\\/\\/)",
          "patterns": [
            {
              "name": "comment.line.slim",
              "match": ".*"
            }
          ]
        }
      ]
    },
    "major": {
      "patterns": [
        {
          "name": "meta.doctype.slim",
          "match": "^\\s*(doctype|html|head|body)\\s+(\\w+)",
          "captures": {
            "1": { "name": "keyword.control.doctype.slim" },
            "2": { "name": "string.quoted.doctype.slim" }
          }
        },
        {
          "name": "meta.doctype.slim",
          "match": "^\\s*(html|head|body)\\s*$",
          "captures": {
            "1": { "name": "keyword.control.doctype.slim" }
          }
        }
      ]
    },
    "layout": {
      "patterns": [
        {
          "name": "meta.structure.slim",
          "match": "^\\s*(header|footer|main|aside|section|article|nav)\\s*$",
          "captures": {
            "1": { "name": "entity.name.tag.structure.slim" }
          }
        }
      ]
    },
    "elements": {
      "patterns": [
        {
          "name": "meta.tag.id.slim",
          "match": "(#)([a-zA-Z][a-zA-Z0-9_-]*)",
          "captures": {
            "1": { "name": "entity.other.attribute-name.id.slim" },
            "2": { "name": "entity.other.attribute-name.id.slim" }
          }
        },
        {
          "name": "meta.tag.class.slim",
          "match": "\\.([a-zA-Z][a-zA-Z0-9_-]*)",
          "captures": {
            "1": { "name": "entity.other.attribute-name.class.slim" }
          }
        },
        {
          "name": "meta.tag.slim",
          "match": "^\\s*([a-zA-Z][a-zA-Z0-9]*)",
          "captures": {
            "1": { "name": "entity.name.tag.slim" }
          }
        },
        {
          "name": "meta.tag.html-attribute.slim",
          "match": "([a-zA-Z][a-zA-Z0-9_-]*)\\s*=\\s*(\"[^\"]*\"|'[^']*')",
          "captures": {
            "1": { "name": "entity.other.attribute-name.html.slim" },
            "2": { "name": "string.quoted.double.slim" }
          }
        },
        {
          "name": "meta.tag.bracket-attributes.slim",
          "begin": "\\[",
          "end": "\\]",
          "beginCaptures": {
            "0": { "name": "keyword.operator.bracket.slim" }
          },
          "endCaptures": {
            "0": { "name": "keyword.operator.bracket.slim" }
          },
          "patterns": [
            {
              "name": "string.quoted.double.slim",
              "begin": "\"",
              "end": "\"",
              "patterns": [
                {
                  "name": "constant.character.escape.slim",
                  "match": "\\\\."
                }
              ]
            },
            {
              "name": "string.quoted.single.slim",
              "begin": "'",
              "end": "'",
              "patterns": [
                {
                  "name": "constant.character.escape.slim",
                  "match": "\\\\."
                }
              ]
            },
            {
              "name": "entity.other.attribute-name.html.slim",
              "match": "\\b[a-zA-Z][a-zA-Z0-9_-]*\\b"
            }
          ]
        },
        {
          "name": "meta.tag.attributes.slim",
          "begin": "^\\s*([a-zA-Z][a-zA-Z0-9]*)\\s*\\(",
          "end": "\\)",
          "beginCaptures": {
            "1": { "name": "entity.name.tag.slim" }
          },
          "patterns": [
            {
              "name": "string.quoted.double.slim",
              "begin": "\"",
              "end": "\"",
              "patterns": [
                {
                  "name": "constant.character.escape.slim",
                  "match": "\\\\."
                }
              ]
            },
            {
              "name": "string.quoted.single.slim",
              "begin": "'",
              "end": "'",
              "patterns": [
                {
                  "name": "constant.character.escape.slim",
                  "match": "\\\\."
                }
              ]
            },
            {
              "name": "variable.other.slim",
              "match": "\\b[a-zA-Z_][a-zA-Z0-9_]*\\b"
            }
          ]
        }
      ]
    },
    "ruby-code": {
      "patterns": [
        {
          "name": "source.ruby.embedded.slim",
          "begin": "^\\s*(ruby:)",
          "end": "^\\s*(end)",
          "beginCaptures": {
            "1": { "name": "keyword.control.ruby.slim" }
          },
          "endCaptures": {
            "1": { "name": "keyword.control.ruby.slim" }
          },
          "patterns": [
            {
              "name": "source.ruby",
              "match": ".*"
            }
          ]
        },
        {
          "name": "source.javascript.embedded.slim",
          "begin": "^\\s*(javascript:)",
          "end": "^\\s*(end)",
          "beginCaptures": {
            "1": { "name": "keyword.control.javascript.slim" }
          },
          "endCaptures": {
            "1": { "name": "keyword.control.javascript.slim" }
          },
          "patterns": [
            {
              "name": "source.javascript",
              "match": ".*"
            }
          ]
        },
        {
          "name": "source.css.embedded.slim",
          "begin": "^\\s*(css:)",
          "end": "^\\s*(end)",
          "beginCaptures": {
            "1": { "name": "keyword.control.css.slim" }
          },
          "endCaptures": {
            "1": { "name": "keyword.control.css.slim" }
          },
          "patterns": [
            {
              "name": "source.css",
              "match": ".*"
            }
          ]
        },
        {
          "name": "source.scss.embedded.slim",
          "begin": "^\\s*(scss:)",
          "end": "^\\s*(end)",
          "beginCaptures": {
            "1": { "name": "keyword.control.scss.slim" }
          },
          "endCaptures": {
            "1": { "name": "keyword.control.scss.slim" }
          },
          "patterns": [
            {
              "name": "source.scss",
              "match": ".*"
            }
          ]
        },
        {
          "name": "source.ruby.embedded.slim",
          "match": "^\\s*([a-zA-Z][a-zA-Z0-9]*)\\s*=\\s*(.+)$",
          "captures": {
            "1": { "name": "entity.name.tag.slim" },
            "2": { "name": "source.ruby" }
          }
        }
      ]
    },
    "text-content": {
      "patterns": [
        {
          "name": "text.plain.slim",
          "match": "^\\s*\\|\\s*(.+)$",
          "captures": {
            "1": { "name": "text.plain" }
          }
        }
      ]
    }
  }
}