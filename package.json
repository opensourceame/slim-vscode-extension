{
  "name": "slim-vscode-extension",
  "displayName": "Slim Language Support",
  "description": "Syntax highlighting and formatting for Slim templates",
  "version": "1.0.0",
  "publisher": "slim-support",
  "engines": {
    "vscode": "^1.60.0"
  },
  "categories": [
    "Programming Languages",
    "Formatters"
  ],
  "keywords": [
    "slim",
    "template",
    "ruby",
    "rails",
    "syntax",
    "formatting"
  ],
  "activationEvents": [
    "onLanguage:slim"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "slim",
        "aliases": [
          "Slim",
          "slim"
        ],
        "extensions": [
          ".slim"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "slim",
        "scopeName": "text.slim",
        "path": "./syntaxes/slim.tmLanguage.json"
      }
    ],
    "configuration": {
      "title": "Slim",
      "properties": {
        "slim.indentSize": {
          "type": "number",
          "default": 2,
          "description": "Number of spaces to use for indentation"
        },
        "slim.useTab": {
          "type": "boolean",
          "default": false,
          "description": "Use tabs instead of spaces for indentation"
        },
        "slim.formatOnSave": {
          "type": "boolean",
          "default": true,
          "description": "Format Slim files on save"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile",
    "test": "ts-mocha -p tsconfig.test.json test/**/*.test.ts",
    "test:watch": "mocha --watch",
    "lint": "eslint src --ext ts"
  },
  "mocha": {
    "require": [
      "ts-node/register"
    ],
    "extension": [
      "ts"
    ],
    "spec": "test/**/*.test.ts"
  },
  "devDependencies": {
    "@types/chai": "^5.2.2",
    "@types/mocha": "^10.0.10",
    "@types/node": "^16.0.0",
    "@types/vscode": "^1.60.0",
    "@vscode/vsce": "^2.32.0",
    "chai": "^5.2.1",
    "mocha": "^11.7.1",
    "ts-mocha": "^11.1.0",
    "ts-node": "^10.9.2",
    "typescript": "^4.5.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/slim-vscode-extension.git"
  },
  "license": "MIT"
}
